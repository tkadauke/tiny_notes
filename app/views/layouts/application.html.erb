<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
  <head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
    <title>TinyNotes</title>
    <%= javascript_include_tag :defaults %>
    <%= stylesheet_link_tag 'style' %>
  </head>
  <body>
    <!-- header start -->
    <div id="header">
      <div class="corset">
        <!-- topheader start -->
        <div id="top_header" class="clearfix">
          <div id="logo">
            <h1><a href="/">TinyNotes</a><sup>&alpha;</sup></h1>
            <p><%= t('layouts.subtitle') %></p>
          </div>
          <div id="right_header">
            <ul class="action-list">
              <li><%= t('layouts.guest_greeter') %></li>
            </ul>
          </div>
        </div>
        <!-- topheader end -->

        <!-- menu start -->
        <div id="menu">
          <ul>
            <li class="selected"><a href="/"><%= t('layouts.notes') %></a></li>
          </ul>
        </div>
      </div>
    </div>
    <!-- header end -->

    <!-- body start -->

    <div id="body">
      <div class="corset">
        <div id="canvas">
          <% if flash[:error] %>
            <div id="flash" class="error">
              <%= flash[:error] %>
              <%= link_to_function t('layouts.close_flash'), "$('flash').fade()" %>
            </div>
          <% elsif flash[:notice] %>
            <div id="flash" class="notice">
              <%= flash[:notice] %>
              <%= link_to_function t('layouts.close_flash'), "$('flash').fade()" %>
            </div>
          <% end %>
          
          <div class="breadcrumb"><%= t('layouts.you_are_here') %>: <%= bread_crumb %></div>
          <%= yield %>
        </div>
      </div>
    </div>
    <!-- body end -->

    <!-- footer start -->
    <div id="footer">
      <div class="corset">
        <div class="content">
          <div class="left">
            <a href="/"><%= t('layouts.home') %></a>
          </div>
          <div class="right">
            <%= t('layouts.version', :version => TinyNotes::Version.version, :revision => revision_link) %>
          </div>
        </div>
        <div class="content">
          <h1><%= t('layouts.quick_links') %></h1>
          <div id="links">
            <a href="http://github.com/tkadauke/tiny_notes"><%= t('layouts.github_project_page') %></a>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
